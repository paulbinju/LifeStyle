                                                                   <thead>
                                                                       <tr>
                                                                           <th></th>
                                                                           <th>
                                                                               Full name
                                                                           </th>

                                                                           <th>
                                                                               Email
                                                                           </th>
                                                                           <th>
                                                                               Mobile
                                                                           </th>
                                                                           <th>
                                                                               Gender
                                                                           </th>
                                                                           <th>
                                                                               Country
                                                                           </th>
                                                                       </tr>
                                                                   </thead>
                                                                   <tbody>
                                                                       @foreach (var item in ViewBag.AllUsers)
                                                                       {

                                                                           <tr>
                                                                               <td>
                                                                                   @if (item.ProfileImage != null && item.ProfileImage != "")
                                                                                   {

                                                                                       <img style="width:50px;height:30px;border:1px solid #ececec" src="@Url.Content(item.ProfileImage)" onerror="this.src='@Url.Content("~/images/ghostimg.png")';" />

                                                                                   }
                                                                                   else
                                                                                   {
                                                                                       <img style="width:50px;height:30px;border:1px solid #ececec" src="@Url.Content("~/images/ghostimg.png")" />

                                                                                   }
                                                                               </td>
                                                                               <td><a href="@Url.Content("~/Home/Author?UserId="+item.UserId)">@item.FullName</a></td>
                                                                               <td><a href="mailto:@item.Email">@item.Email</a></td>
                                                                               <td>@item.Mobile</td>
                                                                               <td>@item.Gender</td>
