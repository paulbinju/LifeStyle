<script type="text/javascript">
     $("#success,#loader").hide();

    $("#contactform").submit(function (e) {
        e.preventDefault();
       
        $("#loader").show();
        var edudata = new FormData(this);
        $.ajax({
            method: "POST",
            url: "@Url.Content("~/Home/Contact")",
            data: edudata,
            contentType: false,
            cache: false,
            processData: false,
            success: function (data) {
                $("#contactform,#loader").hide();
                $("#success").show();
            },
            error: function () {
                 
            }
        });
    });
</script>