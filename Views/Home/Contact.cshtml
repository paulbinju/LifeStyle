                        <form id="contactform" method="post">
                            <div class="row">
                                <div class="col-md-4">
                                    <label for="name">Name <span style="color:red">*</span></label>
                                    <input id="name" name="name" type="text" required class="form-control">
                                </div>
                                <div class="col-md-4">
                                    <label for="mail">E-mail  <span style="color:red">*</span></label>
                                    <input id="mail" name="email" type="email" required class="form-control">
                                </div>
                                <div class="col-md-4">
                                    <label for="website">Phone</label>
                                    <input id="website" name="phone" type="text" class="form-control">
                                </div>
                            </div>
                            <br style="clear:both" />
                            <label for="comment">Your Message  <span style="color:red">*</span></label>
                            <textarea id="comment" name="comment" class="form-control" required></textarea>
                            <br style="clear:both" />
                            <button type="submit" id="submit-contact" class="btn" style="background-color:#de1a22;color:white">
                                <i class="fa fa-paper-plane"></i> Send Message
                            </button>
                        </form>

                        <img id="loader" src="~/images/loader.gif" width="100" />
                        <div id="success"><h4>Thank you for the feedback, we'll get back to you soon!</h4></div>
                    </div>
                    <!-- End contact form box -->

