<script>


    function showlikedusers(ArticleId) {

        $.ajax({
            url: "@Url.Content("~/Article/ArticleLikedUsers")",
            type: 'GET',
            data: { ArticleId: ArticleId },
            success: function (data) {
                $("#LikedUsers").html(data);
                $('#mdlArticleLikedUsers').modal('show');
            },
            error: function () {

            }

        });
    }


